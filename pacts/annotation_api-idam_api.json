{
    "provider": {
        "name": "idam_api"
    },
    "consumer": {
        "name": "annotation_api"
    },
    "interactions": [
        {
            "description": "Provider receives a POST request from an Annotation API",
            "request": {
                "method": "POST",
                "path": "/oauth2/authorize",
                "headers": {
                    "Authorization": "111",
                    "Content-Type": "application/x-www-form-urlencoded"
                }
            },
            "response": {
                "status": 200,
                "headers": {
                    "Content-Type": "application/json; charset=UTF-8"
                },
                "body": {
                    "code": "12345"
                },
                "matchingRules": {
                    "body": {
                        "$.code": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        }
                    },
                    "header": {
                        "Content-Type": {
                            "matchers": [
                                {
                                    "match": "regex",
                                    "regex": "application/json;\\s?charset=(utf|UTF)-8"
                                }
                            ],
                            "combine": "AND"
                        }
                    }
                }
            },
            "providerStates": [
                {
                    "name": "Idam returns the auth code "
                }
            ]
        },
        {
            "description": "Provider receives a GET /code request from an Annotation API",
            "request": {
                "method": "POST",
                "path": "/oauth2/token",
                "headers": {
                    "Authorization": "111",
                    "Content-Type": "application/x-www-form-urlencoded"
                }
            },
            "response": {
                "status": 200,
                "headers": {
                    "Content-Type": "application/json; charset=UTF-8"
                },
                "body": {
                    "access_token": "some-long-access-token",
                    "token_type": "Bearer",
                    "expires_in": "28800"
                },
                "matchingRules": {
                    "body": {
                        "$.access_token": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.token_type": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.expires_in": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        }
                    },
                    "header": {
                        "Content-Type": {
                            "matchers": [
                                {
                                    "match": "regex",
                                    "regex": "application/json;\\s?charset=(utf|UTF)-8"
                                }
                            ],
                            "combine": "AND"
                        }
                    }
                }
            },
            "providerStates": [
                {
                    "name": "Idam successfully returns user details"
                }
            ]
        },
        {
            "description": "Provider receives a GET /details request from an Annotation API",
            "request": {
                "method": "GET",
                "path": "/details",
                "headers": {
                    "Authorization": "111"
                }
            },
            "response": {
                "status": 200,
                "headers": {
                    "Content-Type": "application/json; charset=UTF-8"
                },
                "body": {
                    "forename": "Case",
                    "surname": "Officer",
                    "roles": "[\"caseofficer-ia\"]",
                    "id": "123",
                    "email": "ia-caseofficer@fake.hmcts.net"
                },
                "matchingRules": {
                    "header": {
                        "Content-Type": {
                            "matchers": [
                                {
                                    "match": "regex",
                                    "regex": "application/json;\\s?charset=(utf|UTF)-8"
                                }
                            ],
                            "combine": "AND"
                        }
                    }
                }
            },
            "providerStates": [
                {
                    "name": "Idam successfully returns user details"
                }
            ]
        }
    ],
    "metadata": {
        "pactSpecification": {
            "version": "3.0.0"
        },
        "pact-jvm": {
            "version": "3.5.24"
        }
    }
}